<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

            <RelativeLayout
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/day"
                    android:text="13"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/month"
                    android:layout_toRightOf="@id/day"
                    android:layout_gravity="center_vertical"
                    android:text="October"/>


                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/right"
                    android:id="@+id/right"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentRight="true"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/left"
                    android:id="@+id/left"
                    android:layout_toLeftOf="@id/right"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center_vertical" />

            </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:scrollbarSize="10dp"
            android:scrollbars="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <TextView
                        android:id="@+id/interview_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Interview"/>

                    <TextView
                        android:id="@+id/interview_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

                <ListView
                    android:background="@color/category"
                    android:id="@+id/interviewlist"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:scrollbars="vertical"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <TextView
                        android:id="@+id/resume_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resume"/>

                    <TextView
                        android:id="@+id/resume_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

                <ListView
                    android:background="@color/category"
                    android:id="@+id/resumelist"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:scrollbarSize="3dp"
                    android:scrollbarStyle="outsideOverlay"
                    android:scrollbars="vertical"
                    android:scrollingCache="true"
                    android:smoothScrollbar="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <TextView
                        android:id="@+id/xxx_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Search"/>

                    <TextView
                        android:id="@+id/xxx_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

                <ListView
                    android:background="@color/category"
                    android:id="@+id/xxxlist"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:scrollbars="vertical"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <TextView
                        android:id="@+id/others_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Others"/>

                    <TextView
                        android:id="@+id/others_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

                <ListView
                    android:background="@color/category"
                    android:id="@+id/otherslist"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:scrollbars="vertical"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addtolist"
        android:text="Add to my To-do List"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/addpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
